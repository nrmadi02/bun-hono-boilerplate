{
	"name": "hono-bun",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"build:compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile ./dist/server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun src/index.ts",
		"start:build": "bun dist/index.mjs",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"db:push": "prisma db push",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "prisma migrate deploy",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"tailwind:build": "bun run --bun bunx @tailwindcss/cli -i ./src/views/styles/global.css -o ./static/styles/global.css",
		"tailwind:watch": "bun run --bun bunx @tailwindcss/cli -i ./src/views/styles/global.css -o ./static/styles/global.css --watch"
	},
	"dependencies": {
		"@bull-board/hono": "^6.14.2",
		"@hono/standard-validator": "^0.1.5",
		"@hono/zod-openapi": "^1.1.4",
		"@prisma/client": "^6.19.0",
		"@react-email/components": "^1.0.1",
		"@react-email/render": "^2.0.0",
		"@scalar/hono-api-reference": "^0.9.24",
		"@tailwindcss/cli": "^4.1.17",
		"bullmq": "^5.63.2",
		"dotenv": "^17.2.3",
		"hono": "^4.10.5",
		"hono-openapi": "^1.1.1",
		"ioredis": "^5.8.2",
		"react": "^19.2.0",
		"resend": "^6.4.2",
		"tailwindcss": "^4.1.17",
		"tsdown": "^0.16.5",
		"ua-parser-js": "^2.0.6",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/bun": "latest",
		"@types/react": "^19.2.5",
		"prisma": "^6.19.0"
	}
}
